<div class="modal-header">
  <h5 class="modal-title" id="formModalLabel"><%= resource.form_modal_header %></h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<%= form_for [namespace.to_sym, resource], remote: true do |f| %>
  <div class="modal-body">
    <%= yield f %>
  </div>
  <div class="modal-footer">
    <div class="button-group">
      <button type="button" class="btn btn-light" data-bs-dismiss="modal" title="Close">Close</button>
      <%= f.submit resource.button_name, class: "btn btn-primary", title: "Save #{resource.class_title}" %>
    </div>
  </div>
<% end %>
