<div class="modal-header">
  <h5 class="modal-title" id="formModalLabel">Delete <%= @resource.class_title %></h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
  <% if @resource.destroyable? %>
    <p><%= I18n.t("confirm_message.deletable", name: @resource.class_title) %></p>
  <% else %>
    <p><%= I18n.t("confirm_message.undeletable", name: @resource.class_title) %></p>
  <% end %>
</div>

<div class="modal-footer">
  <div class="button-group">
    <button type="button" class="btn btn-light" data-bs-dismiss="modal" title="Close">Close</button>
    <%= delete_link(controller_name, @resource) if @resource.destroyable? %>
  </div>
</div>
