<div class="modal-header">
  <h5 class="modal-title" id="formModalLabel"><%= "Filter #{controller_name.display}" %></h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<%= search_form_for @search, url: filter_path, class: "filter-form" do |f| %>
  <div class="modal-body">
    <%= yield f %>
  </div>
  <div class="modal-footer">
    <div class="button-group">
      <%= link_to "Remove Filter", filter_path, class: "btn btn-light", title: "Remove Filter"%>
      <%= f.submit "Filter", class: "btn btn-primary", title: "Filter #{controller_name.display}" %>
    </div>
  </div>
<% end %>
