<div class="sidebar">
  <div class="brand-container">
    <span>Mandala</span>
    <span>Freight</span>
  </div>

  <div class="sidebar-item-groups">
    <div class="sidebar-item-group">
      <div class="sidebar-item <%= active_sidebar_item("dashboard") %>">
        <span class="indicator"></span>
        <%= link_to "Dashboard", dashboard_path, class: "link" %>
      </div>
    </div>

    <div class="sidebar-item-group">
      <div class="sidebar-item <%= active_sidebar_item("master") %>">
        <span class="indicator"></span>
        <span class="link">Master</span>
      </div>

      <div class="sidebar-sub-item-group hide">
        <div class="sidebar-sub-item <%= active_sidebar_sub_item("countries") %>">
          <span class="indicator"></span>
          <%= link_to "Countries", master_countries_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("currencies") %>">
          <span class="indicator"></span>
          <%= link_to "Currencies", master_currencies_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("ports") %>">
          <span class="indicator"></span>
          <%= link_to "Ports", master_ports_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("buyers") %>">
          <span class="indicator"></span>
          <%= link_to "Buyers", master_buyers_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("container_details") %>">
          <span class="indicator"></span>
          <%= link_to "Container Details", master_container_details_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("shipping_lines") %>">
          <span class="indicator"></span>
          <%= link_to "Shipping Line", master_shipping_lines_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("freight_items") %>">
          <span class="indicator"></span>
          <%= link_to "Freight Items", master_freight_items_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("units") %>">
          <span class="indicator"></span>
          <%= link_to "Units", master_units_path, class: "link" %>
        </div>

        <div class="sidebar-sub-item <%= active_sidebar_sub_item("payment_types") %>">
          <span class="indicator"></span>
          <%= link_to "Payment Types", master_payment_types_path, class: "link" %>
        </div>
      </div>
    </div>

    <div class="sidebar-item-group">
      <div class="sidebar-item <%= active_sidebar_item("settings") %>">
        <span class="indicator"></span>
        <%= link_to "Settings", "#", class: "link" %>
      </div>
    </div>
  </div>

  <div class="footer">
    <%= link_to edit_user_registration_path, class: "settings-icon", title: "Account Settings" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-settings">
        <circle cx="12" cy="12" r="3"></circle>
        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
      </svg>

      <span class="full-name"><%= current_user.full_name %></span>
    <% end %>

    <%= link_to destroy_user_session_path, method: :delete, class: "logout-icon", title: "Logout" do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
        <polyline points="16 17 21 12 16 7"></polyline>
        <line x1="21" y1="12" x2="9" y2="12"></line>
      </svg>
    <% end %>
  </div>
</div>
