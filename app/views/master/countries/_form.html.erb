<%= render layout: "shared/form_modal_layout", locals: { resource: @country, namespace: "master" } do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label required" %>
    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control", required: true, maxlength: 255 %>
  </div>

  <div class="mb-3">
    <%= f.label :short_name, class: "form-label required" %>
    <%= f.text_field :short_name, placeholder: "Short Name", class: "form-control", required: true, maxlength: 20 %>
  </div>

  <div class="mb-0">
    <%= f.check_box :archived, class: "form-check-input" %>
    <%= f.label :archived, class: "form-check-label" %>
  </div>
<% end %>
