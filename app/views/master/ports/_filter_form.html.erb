  </div>

  <div class="mb-3">
    <%= f.label :delivery_port_eq, "Delivery Port", class: "form-label" %>
    <%= f.select :delivery_port_eq, boolean_flag_filter_list, { include_blank: true, prompt: "-- Select option --" }, { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.label :archived_eq, "Archived", class: "form-label" %>
    <%= f.select :archived_eq, boolean_flag_filter_list, { include_blank: true, prompt: "-- Select option --" }, { class: "form-control" } %>
  </div>
<% end %>
